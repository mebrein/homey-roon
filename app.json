{
  "id": "nl.mebrein.homeyroon",
  "sdk": 2,
  "name": {
    "en": "Roon",
    "nl": "Roon"
  },
  "tags": {
    "en":["music","multi-room","multi room music"]
  },
  "description": {
    "en": "App for Homey that lets you control Roon.",
    "nl": "App voor Homey om Roon te bedienen."
  },
  "category": "music",
  "version": "0.2.1",
  "compatibility": ">=1.5.0",
  "author": {
    "name": "Merijn van Mourik",
    "email": "mmourik@gmail.com"
  },
  "images": {
    "large": "/assets/images/large.jpg",
    "small": "/assets/images/small.jpg"
  },
  "flow": {
    "triggers": [
      {
        "id": "core_paired",
        "title": {
          "en": "Roon paired",
          "nl": "Roon gekoppeld"
        },
        "tokens": [
          {
            "name": "core_name",
            "type": "string",
            "title": {
              "en": "name",
              "nl": "name"
            },
            "example": {
              "en": "ROCK",
              "nl": "ROCK"
            }
          },
          {
            "name": "core_version",
            "type": "string",
            "title": {
              "en": "version",
              "nl": "versie"
            },
            "example": {
              "en": "1.3 (build 247)",
              "nl": "1.3 (build 247)"
            }
          }
        ]
      },
      {
        "id": "core_unpaired",
        "title": {
          "en": "Roon unpaired",
          "nl": "Roon ontkoppeld"
        },
        "tokens": [
          {
            "name": "core_name",
            "type": "string",
            "title": {
              "en": "Name",
              "nl": "Naam"
            },
            "example": {
              "en": "ROCK",
              "nl": "ROCK"
            }
          },
          {
            "name": "core_version",
            "type": "string",
            "title": {
              "en": "Version",
              "nl": "Versie"
            },
            "example": {
              "en": "1.3 (build 247)",
              "nl": "1.3 (build 247)"
            }
          }
        ]
      },
      {
        "id": "song_change",
        "title": {
          "en": "Playing new song",
          "nl": "Nieuwe song gestart"
        },
        "args": [
          {
            "name": "my_device",
            "type": "device",
            "filter": "driver_id=output"
          }
        ],
        "tokens": [
          {
            "name": "now_playing",
            "type": "string",
            "title": {
              "en": "Song",
              "nl": "Nummer"
            }
          },
          {
            "name": "cover_image",
            "type": "image",
            "title": {
              "en": "Cover image",
              "nl": "Cover image"
            }
          },
          {
            "name": "image_url",
            "type": "string",
            "title": {
              "en": "Url",
              "nl": "Url"
            }
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "is_paired",
        "title": {
          "en": "Roon !{{is|isn't}} paired",
          "nl": "Roon !{{is|is niet}} gekoppeld"
        }
      }
    ]
  },
  "drivers": [
    {
      "id": "output",
      "name": {
        "en": "Output",
        "nl": "Output"
      },
      "images": {
        "large": "/drivers/output/assets/images/large.png",
        "small": "/drivers/output/assets/images/small.png"
      },
      "class": "speaker",
      "capabilities": [
        "speaker_playing",
        "speaker_next",
        "speaker_prev",
        "volume_mute"
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "mobile": {
        "components": [
          {
            "id": "icon",
            "capabilities": [
              "volume_mute"
            ]
          }
        ]
      }
    }
  ]
}